<UserControl x:Class="WindowsClient.Views.CreateAccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid Background="Black" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >
            <TextBlock Text="Create account" Foreground="White" FontSize="30" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Nickname" Foreground="White" FontSize="14" Margin="10,10,0,5"/>

            <TextBox Style="{DynamicResource TextBoxLg}"  x:Name="NicknameTextBox"  TextChanged="NicknameTextBox_TextChanged"/>
            <TextBlock x:Name="NicknameErrorTextBlock"
               Foreground="Red"
               FontSize="12"
               Visibility="Hidden"
               Margin="10,5,0,10"/>
            <Button Style="{DynamicResource YellowLgButton}" Width="300" x:Name="ContinueButton" Content="Continue" Height="40" Click="Continue_Click" Margin="0,0,0,10" />
            <Button Style="{DynamicResource WhiteLgButton}" Width="300" x:Name="BackButton" Content="Back" Height="40" Click="Back_Click" />
            <TextBlock x:Name="StatusTextBlock" Margin="10" FontSize="14"/>

        </StackPanel>
    </Grid>
</UserControl>
