<UserControl x:Class="WindowsClient.Views.SignWithQrPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- для изображения -->
            <ColumnDefinition Width="*"/>
            <!-- для основного контента -->
        </Grid.ColumnDefinitions>

        <!-- Левая картинка -->
        <Image Grid.Column="0"
               Source="/Resourses/Img/welcome-image.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Left"
               VerticalAlignment="Stretch"
               Height="Auto"
               Width="300"
               Margin="0"/>

        <!-- Центрированный контент -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="40">
            <Border BorderBrush="Yellow"
                    BorderThickness="5"
                    CornerRadius="15"
                    Background="White"
                    Padding="10"
                    HorizontalAlignment="Center">
                <Image Name="QrImage" Width="200" Height="200"/>
            </Border>

            <TextBlock Text="Scan with a device that already has an account"
                       FontSize="16"
                       Foreground="White"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"/>

            <Button Style="{DynamicResource WhiteLgButton}"
                    Content="Back"
                    Height="40"
                    Width="150"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
