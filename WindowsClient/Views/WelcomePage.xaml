<UserControl x:Class="WindowsClient.Views.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="White" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" >
            <TextBlock Text="Welcome to Arqanum" FontSize="20" FontWeight="Bold" TextAlignment="Center" />

            <Button Content="Sign In" Height="40" Click="SignIn_Click" />
            
            <Button Content="Create account" Height="40" Click="CreateAccount_Click" />
           
        </StackPanel>
    </Grid>
</UserControl>
