<UserControl x:Class="WindowsClient.Views.Controls.Settings.DevicesSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsClient.Views.Controls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,0,0,30">

            <materialDesign:PackIcon Kind="Devices"
                                     Width="60" Height="60"
                                     Foreground="#1D9DC7"
                                     HorizontalAlignment="Center"/>

            <TextBlock Text="CurrentDevice"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,10,0,2"
                       HorizontalAlignment="Center"/>

            <!-- Имя устройства -->
            <TextBlock Text="MyDevice123"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="#222"
                CornerRadius="8"
                Padding="15"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <TextBlock Text="(List)"
                       Foreground="Gray"
                       FontStyle="Italic"
                       FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
